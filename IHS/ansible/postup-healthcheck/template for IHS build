#
# ihs logs
#
/opt/IBM/HTTPServer/logs/access_log {
    daily
    rotate 3
    create
    dateext
    compress
    notifempty
    olddir /opt/IBM/HTTPServer/logs/archive
    missingok
    copytruncate
}

/opt/IBM/HTTPServer/logs/error_log {
    daily
    rotate 3
    create
    dateext
    compress
    notifempty
    olddir /opt/IBM/HTTPServer/logs/archive
    missingok
    copytruncate
}

/opt/IBM/HTTPServer/logs/{{ ihs_instance }}/access_log {
    daily
    rotate 3
    create
    dateext
    compress
    notifempty
    olddir /opt/IBM/HTTPServer/logs/{{ ihs_instance }}/archive
    missingok
    copytruncate
}

/opt/IBM/HTTPServer/logs/{{ ihs_instance }}/error_log {
    daily
    rotate 3
    create
    dateext
    compress
    notifempty
    olddir /opt/IBM/HTTPServer/logs/{{ ihs_instance }}/archive
    missingok
    copytruncate
}
