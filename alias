#==============================================================================
#
#          FILE:  alias
#         USAGE:  . alias
#   DESCRIPTION:  Sets application-wide aliases
#
#       OPTIONS:  ---
#  REQUIREMENTS:  ---
#          BUGS:  ---
#         NOTES:  ---
#        AUTHOR:  Kevin Huntly <kmhuntly@gmail.com>
#       COMPANY:  ---
#       VERSION:  1.0
#       CREATED:  ---
#      REVISION:  ---
#
#==============================================================================

[ ! -z "${ENABLE_VERBOSE}" -a "${ENABLE_VERBOSE}" = "${_TRUE}" ] && set -x || set +x;
[ ! -z "${ENABLE_TRACE}" -a "${ENABLE_TRACE}" = "${_TRUE}" ] && set -v || set +v;

## load aliases
for ALIAS in ${HOME}/.alias.d/*
do
    [ ! -z "${ENABLE_DEBUG}" -a "${ENABLE_DEBUG}" = "${_TRUE}" ] && writeLogEntry "DEBUG" "alias" "${0}" "${LINENO}" "ALIAS -> ${ALIAS}";

    [ -z "${ALIAS}" ] && continue;
    [ -d "${ALIAS}" ] && continue;

    [ ! -z "${ENABLE_TRACE}" -a "${ENABLE_TRACE}" = "${_TRUE}" ] && . ${ALIAS} 2>&1 | tee -a ${LOG_ROOT}/$(basename ${ALIAS}).${DATE_PATTERN}.log || . ${ALIAS};

    [ ! -z "${ALIAS}" ] && unset -v ALIAS;
done

[ ! -z "${ALIAS}" ] && unset -v ALIAS;

case $(/usr/bin/env lsb_release -a | /usr/bin/env grep Distributor | /usr/bin/env awk '{print $NF}') in
    Fedora)
        typeset DISTRIBUTION_NAME="Fedora"
        ;;
    Arch)
        typeset DISTRIBUTION_NAME="Arch"
        ;;
esac

if [ ! -z "${DISTRIBUTION_NAME}" ]
then
    for ALIAS in ${HOME}/.alias.d/${DISTRIBUTION_NAME}/*
    do
        [ ! -z "${ENABLE_DEBUG}" -a "${ENABLE_DEBUG}" = "${_TRUE}" ] && writeLogEntry "DEBUG" "alias" "${0}" "${LINENO}" "ALIAS -> ${ALIAS}";

        [ -z "${ALIAS}" ] && continue;
        [ -d "${ALIAS}" ] && continue;

        [ ! -z "${ENABLE_TRACE}" -a "${ENABLE_TRACE}" = "${_TRUE}" ] && . ${ALIAS} 2>&1 | tee -a ${LOG_ROOT}/$(basename ${ALIAS}).${DATE_PATTERN}.log || . ${ALIAS};

        [ ! -z "${ALIAS}" ] && unset -v ALIAS;
    done
fi

[ ! -z "${ALIAS}" ] && unset -v ALIAS;

[ ! -z "${ENABLE_VERBOSE}" -a "${ENABLE_VERBOSE}" = "${_TRUE}" ] && set -x || set +x;
[ ! -z "${ENABLE_TRACE}" -a "${ENABLE_TRACE}" = "${_TRUE}" ] && set -v || set +v;
