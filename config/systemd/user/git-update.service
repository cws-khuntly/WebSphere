[Unit]
Description=git update for specific repos

[Service]
Type=oneshot
ExecStart=/bin/git -C %h/workspace/dotfiles pull
ExecStart=/bin/git -C %h/workspace/WebSphere pull
SuccessExitStatus=0
User=%u

[Install]
WantedBy=default.target
