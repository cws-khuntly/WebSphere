[Unit]
Description=git update for specific repos

[Service]
Type=oneshot
ExecStart=[[ -d %h/workspace/dotfiles ]] && /bin/git -C %h/workspace/dotfiles fetch origin
ExecStart=[[ -d %h/workspace/dotfiles ]] && /bin/git -C %h/workspace/dotfiles reset --hard origin/master
ExecStart=[[ -d %h/workspace/dotfiles ]] && /bin/git -C %h/workspace/dotfiles pull
ExecStart=/bin/systemctl --user daemon-reload
SuccessExitStatus=0

[Install]
Also=git-update.timer
