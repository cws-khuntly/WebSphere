alias startServer="sudo -u ihssrv /opt/IBM/HTTPServer/bin/apachectl -f /opt/IBM/HTTPServer/conf/httpd.conf -k start";
alias startDefinedServer="sudo -u ihssrv /opt/IBM/HTTPServer/bin/apachectl -f /opt/IBM/HTTPServer/conf/httpd.conf -k start -D";

alias stopServer="sudo -u ihssrv /opt/IBM/HTTPServer/bin/apachectl -f /opt/IBM/HTTPServer/conf/httpd.conf -k stop";
alias stopDefinedServer="sudo -u ihssrv /opt/IBM/HTTPServer/bin/apachectl -f /opt/IBM/HTTPServer/conf/httpd.conf -k stop -D";

alias startAdmin="sudo -u root /opt/IBM/HTTPServer/bin/adminctl -f /opt/IBM/HTTPServer/conf/admin.conf -k stop";
alias stopAdmin="sudo -u root /opt/IBM/HTTPServer/bin/adminctl -f /opt/IBM/HTTPServer/conf/admin.conf -k start";

