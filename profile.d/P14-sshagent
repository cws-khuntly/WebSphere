#==============================================================================
#
#          FILE:  keychain
#         USAGE:  . keychain
#   DESCRIPTION:  Loads keychain and adds available keys to it
#
#       OPTIONS:  ---
#  REQUIREMENTS:  ---
#          BUGS:  ---
#         NOTES:  ---
#        AUTHOR:  Kevin Huntly <kmhuntly@gmail.com>
#       COMPANY:  ---
#       VERSION:  1.0
#       CREATED:  ---
#      REVISION:  ---
#
#==============================================================================

[ ! -z "${ENABLE_VERBOSE}" -a "${ENABLE_VERBOSE}" = "${_TRUE}" ] && set -x || set +x;
[ ! -z "${ENABLE_TRACE}" -a "${ENABLE_TRACE}" = "${_TRUE}" ] && set -v || set +v;

[ -z "$(/usr/bin/env ls -ltr ~/.ssh 2>/dev/null | /usr/bin/env grep pub | /usr/bin/env awk '{print $NF}')" ] && return;

if [ ! -z "$(/usr/bin/env pidof ssh-agent)" ]
then
    . ${HOME}/.ssh/ssh-agent.env;

    return;
fi

/usr/bin/env ssh-agent > ~/.ssh/ssh-agent.env;
source ${HOME}/.ssh/ssh-agent.env;

for SSH_KEY in $(/usr/bin/env ls -ltr "${HOME}/.ssh" | /usr/bin/env grep -E -v "known_hosts|pub|authorized_keys" | /usr/bin/env awk '{print $NF}')
do
    [ ! -z "$(ssh-keygen -l -f ${HOME}/.ssh/${SSH_KEY} 2>/dev/null)" ] && /usr/bin/env ssh-add ${HOME}/.ssh/${SSH_KEY};
done

[ ! -z "${ENABLE_VERBOSE}" -a "${ENABLE_VERBOSE}" = "${_TRUE}" ] && set -x || set +x;
[ ! -z "${ENABLE_TRACE}" -a "${ENABLE_TRACE}" = "${_TRUE}" ] && set -v || set +v;